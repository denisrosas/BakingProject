<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.android.bakingproject.RecipeStepsListActivity">

    <FrameLayout
        android:id="@+id/steps_list_container"
        android:name="com.example.android.bakingproject.Recipes.RecipeStepsFragment"
        android:layout_width="200dp"
        android:layout_height="match_parent" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/steps_details_container"
        android:name="com.example.android.bakingproject.Recipes.RecipeStepDetailsFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
